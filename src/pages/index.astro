	<!-- Scripts -->
	<script>
		// Mobile menu toggle
		function toggleMobileMenu() {
			const menu = document.getElementById('mobile-menu');
			menu?.classList.toggle('hidden');
		}

		// Smooth scrolling enhancement
		document.addEventListener('DOMContentLoaded', () => {
			// Add smooth scrolling with offset for fixed nav
			document.querySelectorAll('a[href^="#"]').forEach(anchor => {
				anchor.addEventListener('click', function (e) {
					e.preventDefault();
					const targetId = this.getAttribute('href').substring(1);
					const target = document.getElementById(targetId);
					
					if (target) {
						const offsetTop = target.offsetTop - 80; // Account for fixed nav
						window.scrollTo({
							top: offsetTop,
							behavior: 'smooth'
						});
					}
				});
			});

			// Add loading screen fade out
			const loadingScreen = document.createElement('div');
			loadingScreen.className = 'fixed inset-0 bg-black z-50 flex items-center justify-center transition-opacity duration-1000';
			loadingScreen.innerHTML = `
				<div class="text-center">
					<div class="text-4xl mb-4">ðŸš€</div>
					<div class="text-sm font-mono animate-pulse">INICIANDO SISTEMA...</div>
				</div>
			`;
			document.body.appendChild(loadingScreen);

			// Remove loading screen after 1 second
			setTimeout(() => {
				loadingScreen.style.opacity = '0';
				setTimeout(() => {
					document.body.removeChild(loadingScreen);
				}, 1000);
			}, 1000);
		});

		// Add scroll-based nav highlighting
		const observerOptions = {
			rootMargin: '-80px 0px -80px 0px',
			threshold: 0.1
		};

		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				const navLink = document.querySelector(`nav a[href="#${entry.target.id}"]`);
				if (entry.isIntersecting) {
					// Remove active class from all nav links
					document.querySelectorAll('nav a[href^="#"]').forEach(link => {
						link.classList.remove('text-glow');
					});
					// Add active class to current nav link
					if (navLink) {
						navLink.classList.add('text-glow');
					}
				}
			});
		}, observerOptions);

		// Observe all sections
		document.addEventListener('DOMContentLoaded', () => {
			document.querySelectorAll('section[id]').forEach(section => {
				observer.observe(section);
			});
		});
	</script>

	<!-- Add some additional CSS for better mobile experience -->
	<style>
		.text-glow {
			text-shadow: 0 0 10px currentColor;
		}

		/* Hide scrollbar but keep scrolling functionality */
		::-webkit-scrollbar {
			width: 8px;
		}

		::-webkit-scrollbar-track {
			background: transparent;
		}

		::-webkit-scrollbar-thumb {
			background: rgba(255, 255, 255, 0.2);
			border-radius: 4px;
		}

		::-webkit-scrollbar-thumb:hover {
			background: rgba(255, 255, 255, 0.4);
		}

		/* Improve mobile tap targets */
		@media (max-width: 768px) {
			nav a, button {
				min-height: 44px;
				display: flex;
				align-items: center;
				justify-content: center;
			}
		}

		/* Accessibility improvements */
		.sr-only {
			position: absolute;
			width: 1px;
			height: 1px;
			padding: 0;
			margin: -1px;
			overflow: hidden;
			clip: rect(0, 0, 0, 0);
			white-space: nowrap;
			border: 0;
		}

		.focus\:not-sr-only:focus {
			position: static;
			width: auto;
			height: auto;
			padding: 0.5rem 1rem;
			margin: 0;
			overflow: visible;
			clip: auto;
			white-space: normal;
		}
	</style>
